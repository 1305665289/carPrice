    isPullUpLoad: false\r\n        }\r\n    },\r\n    props: {\r\n        list: {\r\n            type: Object,\r\n            default: ()=>{\r\n                return {}\r\n            }\r\n        }\r\n    },\r\n    watch: {\r\n        'list.value': function(newVal, oldVal){\r\n            if (newVal !== oldVal){\r\n                this.scroll.refresh();\r\n            }\r\n        }\r\n    },\r\n    methods: {\r\n        refreshDispatch(page){\r\n            this.$store.dispatch(this.list.refreshDispatch, page)\r\n        },\r\n        loadMoreDispatch(page){\r\n            this.$store.dispatch(this.list.loadMoreDispatch, page)\r\n        }\r\n    },\r\n    mounted() {\r\n        this.scroll = new BScroll('.container',{\r\n            scrollY: true,\r\n            click: true,\r\n            pullUpLoad: {\r\n                threshold: 50\r\n            },\r\n            pullDownRefresh: {\r\n              threshold: 50,\r\n              stop: 30\r\n            }\r\n        })\r\n\r\n        this.scroll.on('pullingUp', async ()=>{\r\n            // 判断是否加载完全部数据\r\n            if (this.list.count == this.list.value.length){\r\n                return;\r\n            }\r\n\r\n            if (this.isPullUpLoad){\r\n                return;\r\n            }\r\n            this.isPullUpLoad = true;\r\n            await this.loadMoreDispatch(this.list.query.page+1);\r\n            this.scroll.finishPullUp();\r\n            this.isPullUpLoad = false;\r\n        })\r\n        this.scroll.on('pullingDown', async ()=>{\r\n            await this.refreshDispatch(1);\r\n            this.scroll.finishPullDown();\r\n        })\r\n    },\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n    .container{\r\n        width: 100%;\r\n        height: 100%;\r\n        position: relative;\r\n    }\r\n    .top-tip{\r\n        position: absolute;\r\n        top: -30px;\r\n        text-align: center;\r\n        width: 100%;\r\n        height: 30px;\r\n        line-height: 30px;\r\n    }\r\n</style>"]}]}